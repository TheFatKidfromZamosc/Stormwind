<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stormwind.MainPage">

	<ScrollView>
		<VerticalStackLayout
            Padding="30,0"
            Spacing="25">
			<DatePicker
                x:Name="dpData"
                MinimumDate="2003-02-01"
                />
            <Picker
                x:Name="wybierzWalute"
                   Title="Wybierz Walute">
                <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                         <x:String>USD</x:String>
                        <x:String>EUR</x:String>
                        <x:String>CHF</x:String>
                        <x:String>GBP</x:String>
                        <x:String>100 JPY</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button
                x:Name="Ameryka"
                Text="Wyswietl Walute"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="Bcurrency1"
                HorizontalOptions="Fill"
                />
            <Label x:Name="textCurrency1" Text=""></Label>
        </VerticalStackLayout>
	</ScrollView>

</ContentPage>